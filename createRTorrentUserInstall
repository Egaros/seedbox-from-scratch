#!/bin/bash

if [[ $EUID -ne 0 ]]; then
  echo "This script must be run as root" 1>&2
  exit 1
fi

while [[ $# -gt 1 ]]
do
key="$1"

case $key in
    -u|--username)
    USERNAME="$2"
    shift # past argument 
    ;;
    -p|--port)
    SERVERPORT="$2"
    shift # past argument
    ;;
	-wp|--webport)
    WEBSERVERPORT="$2"
    shift # past argument
    ;;
	-up|--udpport)
    UDPPORT="$2"
    shift # past argument
    ;;
	-pp|--preport)
    PREPORT="$2"
    shift # past argument
    ;;
    *)
            # unknown option
    ;;
esac
shift # past argument or value
done
echo USERNAME  = "${USERNAME}"
echo SERVERPORT     = "${SERVERPORT}"
echo WEBSERVERPORT     = "${SERVERPORT}"

WEBSERVERPORT=$(/opt/getports -sp 8800 -ep 8900)
SERVERPORT=$(opt/getports -sp 51414 -ep 51513))
PREPORT=$(/opt/getports -sp 5001 -ep 5100)
UDPPORT=$(/opt/getports -sp 6882 -ep 6982)

mkdir /home/${USERNAME}/rtorrent
mkdir /home/${USERNAME}/rtorrent/config
docker run --restart=always -d --name ${USERNAME}_rutorrent --net=host -h media.hngamers.com  -v /home/${USERNAME}/downloads/manual:/downloads -v /home/${USERNAME}/rtorrent/config:/config -p ${WEBSERVERPORT}:80 -p ${PREPORT}:5000 -p ${SERVERPORT}:51413:tcp -p ${UDPPORT}:6881:udp -v /etc/localtime:/etc/localtime:ro linuxserver/rutorrent
if [[ -n $1 ]]; then
    echo "Last line of file specified as non-opt/last argument:"
    tail -1 $1
fi