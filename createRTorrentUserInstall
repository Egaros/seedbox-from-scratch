#!/bin/bash

if [[ $EUID -ne 0 ]]; then
  echo "This script must be run as root" 1>&2
  exit 1
fi

while [[ $# -gt 1 ]]
do
key="$1"

case $key in
    -u|--username)
    USERNAME="$2"
    shift # past argument 
    ;;
    *)
            # unknown option
    ;;
esac
shift # past argument or value
done

WEBSERVERPORT=$(/opt/seedbox-from-scratch/getAvailablePort -sp 8800 -ep 8900)
SERVERPORT=$(/opt/seedbox-from-scratch/getAvailablePort -sp 51414 -ep 51513)
PREPORT=$(/opt/seedbox-from-scratch/getAvailablePort -sp 5001 -ep 5100)
UDPPORT=$(/opt/seedbox-from-scratch/getAvailablePort -sp 6882 -ep 6982)

echo USERNAME  = "${USERNAME}"
echo SERVERPORT     = "${SERVERPORT}"
echo WEBSERVERPORT     = "${WEBSERVERPORT}"
echo PREPORT     = "${PREPORT}"
echo UDPPORT     = "${UDPPORT}"

if [ ! -d "/home/${USERNAME}/rtorrent" ]; then
  mkdir /home/${USERNAME}/rtorrent
fi
if [ ! -d "/home/${USERNAME}/rtorrent/config" ]; then
  mkdir /home/${USERNAME}/rtorrent/config
fi

echo "USERNAME: $USERNAME" > /home/${USERNAME}/private/rutorrent.txt
echo "SERVERPORT: $SERVERPORT" >> /home/${USERNAME}/private/rutorrent.txt
echo "WEBSERVERPORT: $WEBSERVERPORT" >> /home/${USERNAME}/private/rutorrent.txt
echo "PREPORT: $PREPORT" >> /home/${USERNAME}/private/rutorrent.txt
echo "UDPPORT: $UDPPORT" >> /home/${USERNAME}/private/rutorrent.txt

docker run --restart=always -d --name ${USERNAME}_rutorrent -h media.hngamers.com  -v /home/${USERNAME}/downloads/manual:/downloads -v /home/${USERNAME}/rtorrent/config:/config -p ${WEBSERVERPORT}:80 -p ${PREPORT}:5000 -p ${SERVERPORT}:51413 -p ${UDPPORT}:6881 -v /etc/localtime:/etc/localtime:ro linuxserver/rutorrent
if [[ -n $1 ]]; then
    echo "Last line of file specified as non-opt/last argument:"
    tail -1 $1
fi