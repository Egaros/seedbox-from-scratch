#!/bin/bash

if [[ $EUID -ne 0 ]]; then
  echo "This script must be run as root" 1>&2
  exit 1
fi

while [[ $# -gt 1 ]]
do
key="$1"

case $key in
    -u|--username)
    USERNAME="$2"
    shift # past argument 
    ;;
	-rp|--rootpassword)
    ROOTPASSWORD="$2"
    shift # past argument
    ;;
	-rb|--rebuild)
    REBUILDSERVER="$2"
    shift # past argument
    ;;
    *)
            # unknown option
    ;;
esac
shift # past argument or value
done

SERVERPORT=$(/opt/seedbox-from-scratch/getAvailablePort -sp 3306 -ep 3306)

echo USERNAME  = "${USERNAME}"
echo SERVERPORT     = "${SERVERPORT}"

echo "USERNAME: $USERNAME" > /home/${USERNAME}/private/mysql.txt
echo "SERVERPORT: $SERVERPORT" >> /home/${USERNAME}/private/mysql.txt
echo "ROOTPASSWORD: $ROOTPASSWORD" >> /home/${USERNAME}/private/mysql.txt

if [ ! -d "/home/${USERNAME}/mysql" ]; then
  mkdir 
fi

if [ ! -f /home/${USERNAME}/mysql/my.cnf ]; then
	cp /etc/seedbox-from-scratch/templates/my.cnf.template /home/${USERNAME}/mysql/my.cnf
	
fi

if [(${REBUILDSERVER} = "YES")]
	rm -rf /home/${USERNAME}/mysql
	cp /etc/seedbox-from-scratch/templates/my.cnf.template /home/${USERNAME}/mysql/my.cnf
fi

docker run --restart=always -d --name ${USERNAME}_mysql -h media.hngamers.com -v /home/${USERNAME}/mysql:/var/lib/mysql -v /home/${USERNAME}/mysql/my.cnf:/etc/my.cnf -p ${SERVERPORT}:3306 -e MYSQL_ROOT_HOST=172.17.0.1 -e MYSQL_ROOT_PASSWORD=${ROOTPASSWORD} -v /etc/localtime:/etc/localtime:ro mysql/mysql-server
if [[ -n $1 ]]; then
    echo "Last line of file specified as non-opt/last argument:"
    tail -1 $1
fi