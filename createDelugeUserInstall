#!/bin/bash

if [[ $EUID -ne 0 ]]; then
  echo "This script must be run as root" 1>&2
  exit 1
fi

while [[ $# -gt 1 ]]
do
key="$1"

case $key in
    -u|--username)
    USERNAME="$2"
    shift # past argument 
    ;;
	-h|--hostname)
    SYSTEMHOSTNAME="$2"
    shift # past argument 
    ;;
    *)
            # unknown option
    ;;
esac
shift # past argument or value
done

WEBSERVERPORT=$(/opt/seedbox-from-scratch/sfsgetAvailablePort -sp 8113 -ep 8212)
SERVERPORT=$(/opt/seedbox-from-scratch/sfsgetAvailablePort -sp 58847 -ep 58946)

echo USERNAME  = "${USERNAME}"
echo SERVERPORT     = "${SERVERPORT}"
echo WEBSERVERPORT     = "${SERVERPORT}"

if [ ! -d "mkdir /home/${USERNAME}/deluge" ]; then
  mkdir /home/${USERNAME}/deluge
fi
if [ ! -d "/home/${USERNAME}/deluge/config" ]; then
  mkdir /home/${USERNAME}/deluge/config
fi

echo "USERNAME: $USERNAME" > /home/${USERNAME}/private/deluge.txt
echo "SERVERPORT: $SERVERPORT" >> /home/${USERNAME}/private/deluge.txt
echo "WEBSERVERPORT: $WEBSERVERPORT" >> /home/${USERNAME}/private/deluge.txt

docker run --restart=always -d --name ${USERNAME}_deluge -h ${SYSTEMHOSTNAME}  -v /home/${USERNAME}/downloads/manual:/downloads -v /home/${USERNAME}/deluge/config:/config -p ${WEBSERVERPORT}:8112 -p ${SERVERPORT}:58846 -v /etc/localtime:/etc/localtime:ro linuxserver/deluge
if [[ -n $1 ]]; then
    echo "Last line of file specified as non-opt/last argument:"
    tail -1 $1
fi